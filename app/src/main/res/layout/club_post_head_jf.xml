<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        >

        <LinearLayout
            style="@style/clube_post_head_bar"
            android:paddingLeft="2dp"
            android:paddingRight="2dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="排名"
                    style="@style/clube_post_title_tv"
                    />

                <TextView
                    android:id="@+id/item_clube_tv3"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    style="@style/clube_post_title_tv"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    
                    android:text="场次" />

                <TextView
                    android:id="@+id/item_clube_tv4"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    style="@style/clube_post_title_tv"
                    android:layout_weight="1"
                    
                    android:text="胜" />

                <TextView
                    android:id="@+id/item_clube_tv5"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_weight="1"
                    style="@style/clube_post_title_tv"
                    android:text="平" />

                <TextView
                    android:id="@+id/item_clube_tv6"
                    android:layout_width="0dp"
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    style="@style/clube_post_title_tv"
                    android:text="负" />

                <TextView
                    android:id="@+id/item_clube_tv7"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_weight="1"
                    style="@style/clube_post_title_tv"
                    android:text="进球" />

                <TextView
                    android:id="@+id/item_clube_tv8"
                    android:layout_width="0dp"
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    style="@style/clube_post_title_tv"
                    android:text="失球" />

                <TextView
                    android:id="@+id/item_clube_tv9"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_weight="1"
                    style="@style/clube_post_title_tv"
                    android:text="净胜球" />

                <TextView
                    android:gravity="center"
                    android:id="@+id/item_clube_tv10"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    style="@style/clube_post_title_tv"
                    android:text="积分" />

            </LinearLayout>


        </LinearLayout>


    </LinearLayout>


</LinearLayout>